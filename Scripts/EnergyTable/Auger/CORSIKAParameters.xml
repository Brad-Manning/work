<?xml version="1.0"?>

<CORSIKAParameters>
  <CORSIKA>

    <!-- Directory to CORSIKA file location --> <!-- include file or directory -->
    <file>/remote/tesla/bmanning/data/qgsII3/iron/18.5/0deg/* </file> 
    <saveLocation>/remote/tesla/bmanning/data/EnergyTable/Auger/qgsII3/iron/18.5/0deg/</saveLocation>
    <particle>all</particle> <!-- all, muon, gamma, electron -->
    <phi> 0.15 </phi> <!-- Radians -->
    <delta> 0.1 </delta> <!-- width either side of tank for section of ring -->
    <startingPosition>1000</startingPosition>
    <!-- distance (m) of first tank from shower core -->
    <maxPosition>1000</maxPosition>
    <!-- max distance(m) of last tank from shower core - to simulate one distance make max and staring position the same -->
    <weightedSimulation> 0 </weightedSimulation> <!-- Allow the program to use a weighted simulation for number of incident particles > threshold; 0 (false), 1 (true) -->
    <threshold>2000000</threshold>
    <detector>0</detector> <!-- 0 corresponds to WCD, 1, SSD -->
    <iterations>1</iterations>
    <!-- number of times to simulate the same shower(s) -->
    <nUniqueShowers>40</nUniqueShowers>
    <!-- number of unique showers to use from data directory -->
    
  </CORSIKA> 
</CORSIKAParameters>
